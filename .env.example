# Cloud Service Selection
CLOUD_PROVIDER=aws  # or google

# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-transcription-bucket

# AWS Bedrock Models
AWS_BEDROCK_ENGLISH_MODEL_ID=anthropic.claude-v2
AWS_BEDROCK_JAPANESE_MODEL_ID=anthropic.claude-v2

# Google Cloud Credentials
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_STORAGE_BUCKET=your-transcription-bucket

# Google Cloud Models
GOOGLE_SPEECH_MODEL=default  # or enhanced, phone_call, etc.
GOOGLE_TRANSLATION_MODEL=nmt  # Neural Machine Translation

# Audio Configuration
TARGET_SAMPLE_RATE=16000
TARGET_CHANNELS=1
MIN_SILENCE_LEN=700
SILENCE_THRESH=-16
SEGMENT_DURATION=10000

# Output Configuration
OUTPUT_DIR=output
